<% @users.each do |users| %>
  <% if current_user != users %>
    <div class="d-inline-flex p-2 bd-highlight col-12 border">
      <p><%= image_tag users.avatar_image.thumb.url,:size =>'50x50' %></p>
      <p class="pl-3 col-4 d-block"><%= link_to "#{users.nick_name.truncate(8)}", "/other_user_show/#{users.id}", :style=>"color:black;" %></p>
      <div class="d-flex flex-row justify-content-end">
          <div id="show_follow_form">  <!-- フォローフォーム開始 -->
            <% if current_user.following?(users) %>
              <%= form_for(current_user.active_relationships.find_by(followed_id: users.id),
              html: { method: :delete }, remote: true) do |f| %>
                <%= f.submit "フォロー中", class: "btn mt-3 ml-5" %>
              <% end %>
            <% else %>
              <%= form_for(current_user.active_relationships.build, remote: true) do |f| %>
                <div><%= hidden_field_tag :followed_id, users.id %></div>
                <%= f.submit "フォロー", class: "btn btn-primary ml-5 mt-3" %>
              <% end %>
            <% end %>
          </div>                         <!-- フォローフォーム終了 -->
      </div>
    </div>
  <% end %>
<% end %>